<!DOCTYPE html>
<html>
<head>
  <title>Firebird</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="container">
    <div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, {:id => "flash_#{name}", :class => "alert alert-#{name}"} %>
      <% end %>
    </div>

    <%= yield %>
    
  </div>

</body>
</html>
