<!DOCTYPE html>
<html>
<head>
  <title>Firebird</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, {:id => "flash_#{name}", :class => "#{name}"} %>
    <% end %>
  </div>

  <%= yield %>

</body>
</html>
